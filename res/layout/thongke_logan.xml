<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableThongkeLogan"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:stretchColumns="1" >
    
    <TableRow
        android:id="@+id/rowAdvertising"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="0dip" >
        
    </TableRow>

    <TableRow
        android:id="@+id/rowLoadingDataLogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="0dip" >

        <ProgressBar
            android:id="@+id/progressBarLogan"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:id="@+id/rowDisplayInfoLogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="0dip" >

        <TextView
            android:id="@+id/displayLoganInfo"
            style="@style/DausoLabel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"            
            android:text="@string/lotogan" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dip" >

        <TextView
            style="@style/DausoLabel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/border"
            android:text="@string/lotogan" />

        <TextView
            style="@style/DuoisoLabel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/border"
            android:text="@string/solanchuara" />
    </TableRow>

</TableLayout>